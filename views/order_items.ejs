<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Order Items</title>

    <!-- STYESHEETS-->
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
    <link rel="stylesheet" href="/styles/footer.css" type="text/css" />
    <link rel="stylesheet" href="/styles/products.css" type="text/css" />

    <!--FONTS-->
    <link href="https://fonts.googleapis.com/css2?family=Alata&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Libre+Caslon+Text:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">

    <!--SCRIPTS-->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>


  <body>
    <nav>
      <%- include("./partials/_nav") %>
    </nav>


    <main class="container">

      <h1>Order Items!</h1>
      <% for (const item of items ) { %>
        <h2>Item name; <%= item.title %></h2>
        <h3>Product id;<%= item.product_id %></h3>
        <h3>Price; $$$<%= item.price %></h3>
        <h3>Order No; <%= item.orderId %></h3>
        <h3><%= item.thumbnail_image_url %></h3>
        <img src="<%=item.thumbnail_image_url%>" alt="a picture of the product" style="height:60px; width:80px" >

        <% } %>
      <!-- button to proceed to checkout -->
      <div>
        <form method="GET" action="/order_history">
          <div class="create-product-button">
            <button type="submit" class="btn btn-primary">
              One Click Purchase
            </button>
          </div>
        </form>
      </div>

    </main>

    <footer>
      <%- include("./partials/_footer") %>
    </footer>
  </body>
</html>
