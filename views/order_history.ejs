<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Order History</title>

    <!-- STYESHEETS-->
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/nav.css" type="text/css" />
    <link rel="stylesheet" href="/styles/footer.css" type="text/css" />
    <link rel="stylesheet" href="/styles/products.css" type="text/css" />

    <!--FONTS-->
    <link href="https://fonts.googleapis.com/css2?family=Alata&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Libre+Caslon+Text:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">

    <!--SCRIPTS-->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <nav>
      <%- include("./partials/_nav") %>
    </nav>

    <main class="container">
      <h1>Order History!</h1>
    </main>
    <% let sum = 0; %>
    <% for (const item of items) {%>

      <div>
        <div class="product-listing">
          <h4>Order Id: <%=item.order_id%> </h4>
          <h4>Item: <%=item.title%> </h4>
          <img src="<%= item.thumbnail_image_url%>" alt="product image" style="height:4em; width:4em">
          <h4>Price: <%=item.price%> </h4>
          <h4>Quantity: <%=item.title%> </h4>
          <% sum += item.cost * item.quantity  %>
        </div>
      </div>
    <% } %>
    <h3>Total Cost: <%= sum %></h3>

    <div>
      <div>
        <div class="product-listing">
          <h4>Order Id:
          <h4>Item: Rubber Tree</h4>
          <img img src="/docs/plants/plant-2.jpg" alt="rubbertree" style="height:4em; width:4em">
          <h4>Price: 15 </h4>
          <h4>Quantity: 1 </h4>
        </div>
      </div>

      <div>
        <div class="product-listing">
          <h4>Item: Snake Plant</h4>
          <img img src="/docs/plants/plant-4.jpg" alt="snakeplant" style="height:4em; width:4em">
          <h4>Price: $$$ </h4>
          <h4>Quantity: 1 </h4>
        </div>
        <h3>Total Cost: <%= sum %></h3>
      </div>
    </div>
    <footer>
      <%- include("./partials/_footer") %>
    </footer>
  </body>
</html>
