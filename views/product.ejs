<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Product</title>

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
  </head>

  <body>
    <h1>Product Page!</h1>
    <nav>
      <%- include("./partials/_nav") %>
    </nav>

    <main class="container">
      <!-- button to create a new product listing -->
      <% if (type === "buyer" || type === "seller" ) { %>
        <h1>hello IM WORKING</h1>
        <% if (product) { %>
        <h2><%= product.title %></h2>
        <h2><%= product.seller_id %></h2>
        <h2><%= product.description %></h2>
        <h2><%= product.price %></h2>
        <h2><%= product.availability %></h2>
        <h2><%= product.thumbnail_image_url %></h2>
        <h2><%= product.product_image_url %></h2>
        <h2><%= product.category %></h2>
        <h2><%= product.type %></h2>
        <h2><%= product.material %></h2>
        <h2><%= product.size %></h2>
        <% } %>

      <div>
        <form method="POST" action="">
          <div class="create-product-button">
            <button type="submit" class="btn btn-primary">
              Add to Favourite (not working)
            </button>
          </div>
        </form>
      </div>
      <% } %>
      <!-- button to add to basket (order_items) -->
      <div>
        <form method="POST" action="/order_items">
          <div class="create-product-button">
            <button type="submit" class="btn btn-primary">
              Add to basket
            </button>
          </div>
        </form>
      </div>

      <!-- button to buy now -->
      <div>
        <form method="GET" action="/order_history">
          <div class="create-product-button">
            <button type="submit" class="btn btn-primary">
              Buy now
            </button>
          </div>
        </form>
      </div>

      <% if (type === "seller") { %>
      <!-- button to mark product as sold out -->
      <div>
        <form method="POST" action="/my_products/<%= product.id %>/soldout">
          <div class="create-product-button">
            <button type="submit" class="btn btn-primary">
              Sold out
            </button>
          </div>
        </form>
      </div>

      <!-- button to remove product -->
      <div>
        <form method="POST" action="/my_products/<%= product.id %>/remove">
          <div class="create-product-button">
            <button type="submit" class="btn btn-primary">
             Remove
            </button>
          </div>
        </form>
      </div>
      <% } %>
    </main>
  </body>
</html>
