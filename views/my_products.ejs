              <button type="submit" class="btn">
                Remove
              </button>
            </div>
          </a>
        </div>

        <!--list of seller's items-->
        <% for (const item of items) {%>
          <div>
            <a href="">
            <div class="product-listing">
              <img src="<%= item.thumbnail_image_url%>" alt="product image" style="width:100%">
              <h4><%=item.title%> </h4>
              <button type="submit" class="btn">
                Remove
              </button>
            </div>
            </a>
          </div>
        <% } %>

